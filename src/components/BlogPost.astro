---
interface Props {
  title: string;
  slug: string;
  image: string;
  excerpt: string;
  date: string;
}

const { title, slug, image, excerpt, date } = Astro.props;
---

<article class="blog-card">
  <a href={`/blog/${slug}`}>
    <img src={image} alt={title} class="blog-image" />
    <div class="content">
      <h2>{title}</h2>
      <p class="date">{date}</p>
      <p class="excerpt">{excerpt}</p>
      <span class="read-more">Read More â†’</span>
    </div>
  </a>
</article>

<style>
  .blog-card {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .blog-card:hover {
    transform: translateY(-4px);
  }

  .blog-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .content {
    padding: 1.5rem;
  }

  h2 {
    margin: 0;
    font-size: 1.5rem;
    color: #1a1a1a;
  }

  .date {
    color: #666;
    font-size: 0.9rem;
    margin: 0.5rem 0;
  }

  .excerpt {
    color: #444;
    margin: 0.5rem 0;
    line-height: 1.6;
  }

  .read-more {
    color: #007acc;
    font-weight: 500;
  }

  a {
    text-decoration: none;
  }
</style>
