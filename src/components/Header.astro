<style>
  header {
    background: #1a1a1a;
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    color: #fff;
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
  }

  .nav-links a {
    color: #fff;
    text-decoration: none;
    margin-left: 2rem;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: #007acc;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
  }
</style>
